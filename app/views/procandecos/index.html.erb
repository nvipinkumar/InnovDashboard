<%- model_class = Procandeco -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Summary) %></th>
      <th><%= model_class.human_attribute_name(:Description) %></th>
      <th><%= model_class.human_attribute_name(:Owner) %></th>
      <th><%= model_class.human_attribute_name(:Reviewed) %></th>
      <th><%= model_class.human_attribute_name(:Status_id) %></th>
      <th><%= model_class.human_attribute_name(:Comments) %></th>
      <th><%= model_class.human_attribute_name(:Action) %></th>
      <th><%= model_class.human_attribute_name(:ImpOwner_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @procandecos.each do |procandeco| %>
      <tr>
        <td><%= link_to procandeco.id, procandeco_path(procandeco) %></td>
        <td><%= procandeco.Name %></td>
        <td><%= procandeco.Summary %></td>
        <td><%= procandeco.Description %></td>
        <td><%= procandeco.Owner %></td>
        <td><%= procandeco.Reviewed %></td>
        <td><%= procandeco.Status_id %></td>
        <td><%= procandeco.Comments %></td>
        <td><%= procandeco.Action %></td>
        <td><%= procandeco.ImpOwner_id %></td>
        <td><%=l procandeco.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_procandeco_path(procandeco), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      procandeco_path(procandeco),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_procandeco_path,
            :class => 'btn btn-primary' %>
