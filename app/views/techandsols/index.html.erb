<%- model_class = Techandsol -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Summary) %></th>
      <th><%= model_class.human_attribute_name(:Description) %></th>
      <th><%= model_class.human_attribute_name(:Owner) %></th>
      <th><%= model_class.human_attribute_name(:Reviewed) %></th>
      <th><%= model_class.human_attribute_name(:Status_id) %></th>
      <th><%= model_class.human_attribute_name(:Comments) %></th>
      <th><%= model_class.human_attribute_name(:Action) %></th>
      <th><%= model_class.human_attribute_name(:ImpOwner_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @techandsols.each do |techandsol| %>
      <tr>
        <td><%= link_to techandsol.id, techandsol_path(techandsol) %></td>
        <td><%= techandsol.Name %></td>
        <td><%= techandsol.Summary %></td>
        <td><%= techandsol.Description %></td>
        <td><%= techandsol.Owner %></td>
        <td><%= techandsol.Reviewed %></td>
        <td><%= techandsol.Status_id %></td>
        <td><%= techandsol.Comments %></td>
        <td><%= techandsol.Action %></td>
        <td><%= techandsol.ImpOwner_id %></td>
        <td><%=l techandsol.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_techandsol_path(techandsol), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      techandsol_path(techandsol),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_techandsol_path,
            :class => 'btn btn-primary' %>
