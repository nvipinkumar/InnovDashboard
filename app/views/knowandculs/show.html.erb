<%- model_class = Knowandcul -%>
<div class="page-header">
  <!-- <h1><%=t '.title', :default => model_class.model_name.human %></h1> -->
  <h1><%=t 'Knowledge and Culture' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Name) %>:</strong></dt>
  <dd><%= @knowandcul.Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Summary) %>:</strong></dt>
  <dd><%= @knowandcul.Summary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Description) %>:</strong></dt>
  <dd><%= @knowandcul.Description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Owner) %>:</strong></dt>
  <dd><%= @knowandcul.Owner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Reviewed) %>:</strong></dt>
  <dd><%= @knowandcul.Reviewed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Status_id) %>:</strong></dt>
  <dd><%= @knowandcul.Status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Comments) %>:</strong></dt>
  <dd><%= @knowandcul.Comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Action) %>:</strong></dt>
  <dd><%= @knowandcul.Action %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ImpOwner_id) %>:</strong></dt>
  <dd><%= @knowandcul.ImpOwner_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              knowandculs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_knowandcul_path(@knowandcul), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              knowandcul_path(@knowandcul),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
